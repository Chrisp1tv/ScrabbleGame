<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox styleClass="root-container,home-view" xmlns="http://javafx.com/javafx/8.0.112-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="istv.chrisanc.scrabble.controllers.HomeController">
    <Text text="%Scrabble" styleClass="game-name"/>
    <VBox styleClass="menu-buttons">
        <Button mnemonicParsing="false" onAction="#handleNewGame" text="%newGame"/>
        <Button mnemonicParsing="false" onAction="#handleLoadGame" text="%loadGame"/>
        <Button mnemonicParsing="false" onAction="#handleExit" text="%quit"/>
    </VBox>
</VBox>
